      <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-4 pure-u-lg-1-5">
        <div class="bg-less-dark p-1 m-tl-1">
          <div class="truncate">site: {{ site_name }}</div>
          <div class="truncate">status: UP</div>{# fime #}
          <div class="truncate">host: {{ asn.name }}</div>{# fixme asn number #}
